from tkinter import *
import ui

class LessonAdministration(Frame):
#GUI Setup
	def __init__(self, master, lessonID, userID):
		self.lessonID = lessonID
		self.userID = userID

	def addSlide():
		#add slide here
		return False

	def removeSlide():
		return False
		#removeSlide

	def createTest():
		#createTest
		return False

	def getTestResults():
		#access test results list
		return False

window = Tk()
window.title("Lesson Administration")
studybook = LessonAdministration(window, '12','03')

ui.margin_y(window, px=0, row=0)
ui.title(window, text="Lesson Administration", row=1)
ui.margin_y(window, px=2, row=2)
ui.pair(window, label_text="Add Slide", button_text="Add Slide", command=lambda: studybook.addSlide(), row=3)
ui.pair(window, label_text="Remove Slide", button_text="Remove Slide", command=lambda: studybook.removeSlide(), row=4)
ui.pair(window, label_text="Create Test", button_text="Create Test", command=lambda: studybook.createTest(), row=5)
ui.pair(window, label_text="Get Test results", button_text="Get Test results", command=lambda: studybook.getTestResults(), row=6)

window.mainloop() 
